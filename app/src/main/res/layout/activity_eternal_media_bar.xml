<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:id="@+id/mainlayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundview"
        android:contentDescription="@string/nullicon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="144dp"
        android:layout_height="match_parent"
        android:id="@+id/optionslist"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/menu_bg"
        android:layout_marginRight="-144dp"
        android:elevation="2dp" />

    <HorizontalScrollView
        android:id="@+id/categoriesscroll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/optionslist"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/categories"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:orientation="vertical"
        android:layout_width="144dp"
        android:id="@+id/apps_displayscroll"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="96dp"
        android:layout_below="@+id/categoriesscroll">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="144dp"
            android:id="@+id/apps_display"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"></LinearLayout>
    </ScrollView>


</RelativeLayout>
