<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:text="Red"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/redSeek"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_below="@+id/textView"
        android:max="255"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:layout_below="@+id/redSeek"
        android:text="Green"  />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/greenSeek"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_below="@+id/textView2"
        android:max="255"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:layout_below="@+id/greenSeek"
        android:text="Blue" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/blueSeek"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_below="@+id/textView3"
        android:max="255"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:layout_below="@+id/blueSeek"
        android:text="Transparency" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/alphaSeek"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_below="@+id/textView4"
        android:max="255"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/hexText"
        android:clickable="true"
        android:inputType="text"
        android:hint="Hex value"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/alphaSeek"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>